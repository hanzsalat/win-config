{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": "<#C591E8>\u276f</><#69FF94>\u276f</>",
          "type": "text"
        },
        {
          "foreground": "#69FF94",
          "properties": {
            "time_format": "15:04"
          },
          "style": "plain",
          "template": " {{ .CurrentDate | date .Format }}",
          "type": "time"
        },
        {
          "foreground": "#E36464",
          "style": "plain",
          "template": " {{ .HostName }}@{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "#56B6C2",
          "properties": {
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": "{{ .Path }}",
          "type": "path"
        },
        {
          "foreground": "#C591E8",
          "properties": {
            "branch_icon": "",
            "fetch_status": false
          },
          "style": "plain",
          "template": " <#DDB15F>git:(</>{{ .HEAD }}<#DDB15F>)</>",
          "type": "git"
        },
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": " {{ if .Root }}#{{ else }}${{ end }}",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#E36464",
    "template": "@{{ .UserName }} <#62ED8B>\u279c</> "
  },
  "final_space": true,
  "version": 2
}