{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": "<#C591E8>\u276f</><#69FF94>\u276f</> ",
          "type": "text"
        },
        {
          "foreground": "#69FF94",
          "properties": {
            "time_format": "15:04"
          },
          "style": "plain",
          "template": "{{ .CurrentDate | date .Format }}",
          "type": "time"
        },
        {
          "type": "wakatime",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#007acc",
          "properties": {
              "url": "https://wakatime.com/api/v1/users/current/summaries?start=today&end=today&api_key=waka_9477a691-522d-4894-b8d6-1b9a3deeda78",
              "cache_timeout": 10,
              "http_timeout": 500
          }
        },
        {
          "foreground": "#E36464",
          "style": "plain",
          "template": " {{ .HostName }}@{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "#56B6C2",
          "properties": {
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": "{{ .Path }}",
          "type": "path"
        },
        {
          "foreground": "#C591E8",
          "properties": {
            "branch_icon": "",
            "fetch_status": false
          },
          "style": "plain",
          "template": " <#DDB15F>git:(</>{{ .HEAD }}<#DDB15F>)</>",
          "type": "git"
        },
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": " {{ if .Root }}#{{ else }}${{ end }}",
          "type": "text"
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "segments": [
        {
          "type": "spotify",
          "style": "plain",
          "powerline_symbol": "\uE0B0",
          "foreground": "#69FF94",
          "properties": {
            "playing_icon": "\uE602 ",
            "paused_icon": "\uF8E3 ",
            "stopped_icon": "\uF04D "
          }
        }
      ]
    }
  ],
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#E36464",
    "template": "@{{ .UserName }} <#62ED8B>\u279c</> "
  },
  "final_space": true,
  "version": 2
}